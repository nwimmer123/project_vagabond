<section id='signup-form' class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= form_for :user, url: users_path do |f| %>
        <fieldset>
          <legend>Sign Up!</legend>

          <div class="form-group">
            <label class="col-md-4 control-label" for="first_name">First Name</label>
            <div class="col-md-8">
              <%= f.text_field :first_name, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="last_name">Last Name</label>
            <div class="col-md-8">
              <%= f.text_field :last_name, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="current_city">Current City</label>
            <div class="col-md-8">
              <%= f.text_field :current_city, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="password">Password</label>
            <div class="col-md-8">
              <%= f.password_field :password, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="password_confirmation">Confirm Password</label>
            <div class="col-md-8">
              <%= f.password_field :password_confirmation, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12">
              <%= f.submit "Sign up", class: "btn btn-success" %>
            </div>
          </div>
          
        </fieldset>
      <% end %>

    </div>
  </div>